extends ../../../node_modules/jade-bootstrap/_bootstrap.pug
append styles
  link(href='./css/login.css', rel='stylesheet')
  head
    title= title
  body
  .container
    form.form-signin(action='/employer/deleteEmployer', method='POST')
      h2.form-signin-heading= heading
      h4.form-signin-heading= 'Name: ' + EmpName + " "
      h4.form-signin-heading= 'Email: ' + Email + " "
      h4.form-signin-heading= 'Representative Name: ' + Rep + " "
      input#inputEmail.form-control(type='hidden', name='EmpId', value=EmpId, placeholder='Enter Existing EmpId')
      input#inputEmail.form-controlinput(type='submit', value='DELETE')
      br
      a(href='/listEmployers') Cancel
