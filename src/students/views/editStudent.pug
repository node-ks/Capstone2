// Special version of Bootstrap that only affects content wrapped in .bootstrap-iso
link(rel='stylesheet', href='https://formden.com/static/cdn/bootstrap-iso.css')
h1 Edit Your Student Profile
// Inline CSS based on choices in "Settings" tab
style.
  .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}

.bootstrap-iso
  .container-fluid
    .row
      .col-md-6.col-sm-6.col-xs-12
        form(action='/student/editStudent', method='POST')
          input(name='StudId', type='hidden', value=StudId)
          .form-group
            label.control-label(for='name')
              | First Name
              span.asteriskField
                | *
            input#name.form-control(name='Fname', type='text', value=Fname)
          .form-group
            label.control-label(for='name')
              | Middle Name
            input#name.form-control(name='Mname', type='text', value=Mname)
            .form-group
            label.control-label(for='name')
              | Last Name
              span.asteriskField
                | *
            input#name.form-control(name='Lname', type='text', value=Lname)
          .form-group
            label.control-label(for='name')
              | Gender
            input#name.form-control(name='Gender', type='text', value=Gender)  
          .form-group
            label.control-label(for='name')
              | Address
              span.asteriskField
                | *
            input#name.form-control(name='StudAddress', type='text', value=StudAddress)  
          .form-group
            label.control-label(for='name')
              | Date of Birth
              span.asteriskField
                | * 
              |(YYYY-MM-DD; Example: 2001-01-02)
            input#name.form-control(name='Dob', type='text', value=Dob)
          .form-group
            label.control-label(for='name')
              | Phone Number
            input#name.form-control(name='Phone', type='text', value=Phone) 
          .form-group
            label.control-label(for='name')
              | GPA
              span.asteriskField
                | * 
              |(Two point accuracy; Example: 3.00)
            input#name.form-control(name='Gpa', type='text', value=Gpa)                   
          .form-group
            label.control-label.requiredField(for='email')
              | Email
              span.asteriskField
                | *
            input#email.form-control(name='Email', type='text', value=Email)
          .form-group
            label.control-label.requiredField(for='name')
              | School ID
              span.asteriskField
                | * 
              |Enter "0" if unknown
            input#name.form-control(name='SchoolId', type='text', value=SchoolId) 
          .form-group
            div
              button.btn.btn-primary(name='submit', type='submit')
                | Submit
