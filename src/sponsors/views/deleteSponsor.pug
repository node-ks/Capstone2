extends ../../../node_modules/jade-bootstrap/_bootstrap.pug
append styles
  link(href='./css/login.css', rel='stylesheet')
  head
    title= title
  body
  .container
    form.form-signin(action='/sponsor/deleteSponsor', method='POST')
      h2.form-signin-heading= heading
      h4.form-signin-heading= 'Name: ' + SpnName + " "
      h4.form-signin-heading= 'Email: ' + Email + " "
      input#inputEmail.form-control(type='hidden', name='SpnId', value=SpnId, placeholder='Enter Existing SpnId')
      input#inputEmail.form-controlinput(type='submit', value='DELETE')
      br
      a(href='/listSponsors') Cancel
